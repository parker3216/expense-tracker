<div class="container-fluid mt-5">
  <div class="container" style="width:300px;">

    <form action="/records/{{ record._id}}?_method=PUT" method="POST">

      <div class="mb-4">
        <label class="label" for="name" style="font-size: 10px;">必填欄位*</label>
        <label class="text-center" for="name" style="width: 200px; font-size: 25px">請修改你的支出</label>
      </div>

      <div class="mb-4">
        <label class="label" for="name" style="width: 50px;">名稱* :</label>
        <input type="text" name="name" id="name" class="mb-3 mx-3" value="{{ record.name }}" >
      </div>

      <div class="mb-4">
        <label class="label" for="date" style="width: 50px;">日期* :</label>
        <input type="date" name="date" id="date" value="{{ record.date }}" class="mb-3 mx-3" style="width: 180px; height: 30px;" >
      </div>

      <div class="mb-4">
        <label class="label" for="category" style="width: 50px;">類別* :</label>
        <select class="mb-3 mx-3" style="width: 180px; height: 30px;" name="category" id="category" value="{{record.category}}">
          <option value="0" selected disabled>Select</option>
          <option value="1">家居物業</option>
          <option value="2">交通出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option>
        </select>
      </div>

      <div class="mb-4">
        <label class="label" for="amount" style="width: 50px;">金額* :</label>
        <input type="text" name="amount" id="amount" class="mb-3 mx-3" value="{{ record.amount }}">
      </div>

      <div class="d-flex justify-content-center "><button type="submit" class="btn btn-primary">修改支出</button>
      </div>

    </form>
  </div>
</div>