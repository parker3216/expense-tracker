<div class="container mt-3 mx-auto">
  <div class="container-fluid mt-5">
    <div class="container" style="width:300px;">

  <!-- category select -->
    <form action="/" class="auto" method="GET">
      <div class="mb-4">
        <select class="mb-3 mx-3" style="width: 200px; height: 30px;" name="choice" id="choice" onchange="this.form.submit()">
          <option>{{selectTitle}}</option>
          <option value="1">家居物業</option>
          <option value="2">交通出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option>
        </select>
      </div>
    </form>
  <!-- Total amount -->
  <label class="mt-3" for="name" style="font-size: 15x;">總金額</label>
  <div class="mb-4">
  <label class="text-end" for="name" style="width: 200px;
  color: rgb(255, 115, 0);"><h1>{{totalAmount}}</h1></label>
      </div>
    </div>
</div>
  <!-- data -->
  <div class="d-flex justify-content-center my-5">
    <ul class="list-group w-200">
      {{#each records}}
  <li class=" list-group-item mb-0 d-flex justify-content-around">
    <div class ="d-flex">
      <div class="icon mx-2">
      <i class="{{this.categoryIcon}} fa-2xl ms-2" style="width:60px; 
  color: rgb(17, 189, 189);"></i>
    </div>
    <div class="d-flex">
      <div class="d-flex flex-column me-5">
        <h6>{{this.name}}</h6>
        <small>{{this.date}}</small>
      </div>
    <div class="d-flex align-items-center ms-5">
      <h5>{{this.amount}}</h5>
    </div>
  </div>
</div>
<div class="d-flex align-items-center">
  <a class="btn btn-success mx-4" href="/records/{{ this._id }}/edit">修改</a>
    <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="btn btn-secondary">刪除</button>
    </form>
</div>
</li>
  {{/each}}
    </ul>
  </div>

</div>

  <div class="d-flex justify-content-center mt-2">
    <a class="btn btn btn-primary" href="/records/new">新增支出</a>
  </div>

    